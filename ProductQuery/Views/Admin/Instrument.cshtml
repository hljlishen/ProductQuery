@{
    Layout = "~/Views/Admin/AdminIndex.cshtml";
}

@{
    ViewBag.Title = "Instrument";
}
<script src="~/Content/js/bootstrap.min.js"></script>
<script src="~/Content/js/Chart.min.js"></script>
<script src="~/Content/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/js/moment.min.js"></script>
<script src="~/Content/js/tooplate-scripts.js"></script>
<script src="~/Content/E-Charts3/bmap.min.js"></script>
<script src="~/Content/E-Charts3/china.js"></script>
<script src="~/Content/E-Charts3/dataTool.js"></script>
<script src="~/Content/E-Charts3/echarts.min.js"></script>
<script src="~/Content/E-Charts3/echarts-gl.min.js"></script>
<script src="~/Content/E-Charts3/ecStat.js"></script>
<script src="~/Content/E-Charts3/simplex.js"></script>
<script src="~/Content/E-Charts3/world.js"></script>
<div class="container mt-5">
    <div class="col-12 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block">
            <h2 class="tm-block-title">网站点击信息</h2>

            <table class="table" style="vertical-align: middle;text-align: center;">
                <tbody>
                    <tr>

                        <td>
                            <div class="tm-bg-primary-dark">
                                <a href="javascript:;" class="tile-button btn bg-azure" title="">
                                    <div class="col-center-block">
                                        <i class="glyph-icon fa fa-search fa-5x"></i>
                                        <div class="tile-content">
                                            <p id="querynumber"></p><span>人次</span>
                                        </div>
                                        <small>
                                            <i class="glyph-icon fa fa-crosshairs"></i>
                                            网站提供查询人次
                                        </small>
                                    </div>
                                </a>
                            </div>
                        </td>

                        <td>
                            <div class="tm-bg-primary-dark">
                                <a href="javascript:;" class="tile-button btn bg-blue-alt" title="">
                                    <div class="tile-content-wrapper">
                                        <i class="glyph-icon fa fa-user fa-5x"></i>
                                        <div class="tile-content">
                                            <p id="accessnumber"></p><span>人次</span>
                                        </div>
                                        <small>
                                            <i class="glyph-icon fa fa-crosshairs"></i>
                                            管理员访问人次
                                        </small>
                                    </div>
                                </a>
                            </div>
                        </td>

                        <td>
                            <div class="tm-bg-primary-dark">
                                <a href="javascript:;" class="tile-button btn bg-azure" title="">
                                    <div class="tile-content-wrapper">
                                        <i class="glyph-icon fa fa-users fa-5x"></i>
                                        <div class="tile-content">
                                            <p id="clicknumber"></p><span>人次</span>
                                        </div>
                                        <small>
                                            <i class="glyph-icon fa fa-crosshairs"></i>
                                            网站访问人次
                                        </small>
                                    </div>
                                </a>
                            </div>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-12 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block">
            <div id="container" style="height: 300%;width:100%"></div>
        </div>
    </div>

</div>
<script type="text/javascript">
    UpdateWebClickNumber();
    var refresh = "";
    function UpdateWebClickNumber() {
        $.ajax({
                url: "@Url.Action("GetNowWebClickData")",
                type: "post",
                success: function (data) {
                    if (data) {
                        var obj = document.getElementById("querynumber");
                        obj.innerHTML = data["querynumber"]; 

                        var obj = document.getElementById("accessnumber");
                        obj.innerHTML = data["accessnumber"]; 

                        var obj = document.getElementById("clicknumber");
                        obj.innerHTML = data["clicknumber"]; 
                    } else {
                        alert("数据获取失败！");
                    }
                }
        });
    }
    refresh = setInterval(function () {
        UpdateWebClickNumber();
    }, 2000);

    UpdateShow();
    var refreshtable = "";
    //选择年份
    function UpdateShow() {
        $.ajax({
                url: "@Url.Action("GetWebClickData")",
                type: "post",
                success: function (data) {
                    if (data) {
                        DataShow(data);
                    } else {
                        alert("数据获取失败！");
                    }
                }
        });
    }
    refreshtable = setInterval(function () {
        UpdateShow();
    }, 2000);
    //统计图展示
    function DataShow(clicknumber) {
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('container'));

        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '站点访问人次数据图'
            },
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['人次']
            },
            toolbox: {
                show: true,
                feature: {
                    saveAsImage: { show: true }
                }
            },

            calculable: true,

            xAxis: [
                {
                    type: 'category',
                    data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: [
                {
                    name: '网站点击量',
                    type: 'line',
                    data: clicknumber,
                    markPoint: {
                        data: [
                            { type: 'max', name: '最大值' },
                        ]
                    },
                    markLine: {
                        data: [
                            { type: 'average', name: '平均值' }
                        ]
                    }
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    }
</script>


